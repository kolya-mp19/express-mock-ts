{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",             // <- обязательно NodeNext
    "moduleResolution": "NodeNext",   // <- чтобы import pkg from 'express' работал
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["server.ts"]
}
